<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <About>
        <Summary>OntoAgent playground.</Summary>
    </About>

    <ServerSection>
        <ServerInitialConditions>
            <Time>
                <StartTime>1</StartTime>
            </Time>
        </ServerInitialConditions>
        <ServerHandlers>
            <FlatWorldGenerator generatorString="3;7,220*1,5*3,2;3;,biome_1"/>
            <DrawingDecorator>
                <!-- coordinates for cuboid are inclusive -->
                <DrawCuboid x1="-2" y1="46" z1="-2" x2="7" y2="50" z2="13" type="air"/>     <!-- limits of our arena -->
                <DrawCuboid x1="-2" y1="45" z1="-2" x2="7" y2="45" z2="13" type="lava"/>    <!-- lava floor -->
                <DrawCuboid x1="1" y1="45" z1="1" x2="3" y2="45" z2="17" type="sandstone"/> <!-- floor of the arena -->
                <DrawBlock x="4" y="45" z="1" type="cobblestone"/>  <!-- the starting marker -->
                <DrawBlock x="4" y="45" z="7" type="lapis_block"/>  <!-- the destination marker -->
                <DrawBlock x="3" y="46" z="8" type="lapis_block"/>
                <DrawBlock x="3" y="47" z="8" type="lapis_block"/>
                <DrawBlock x="3" y="48" z="8" type="tnt"/>
                <DrawBlock x="3" y="47" z="7" type="stone_button"/>
            </DrawingDecorator>
        </ServerHandlers>
    </ServerSection>

    <AgentSection mode="Survival">
        <Name>@SELF.AGENT.1</Name>
        <AgentStart>
            <Placement x="4.5" y="46.0" z="1.5" pitch="5" yaw="0"/>
            <!--
                Note:   North is Z-, South is Z+
                        West is X-, East is X+
                        Down is Y-, Up is Y+
            -->
            <Inventory>
                <InventoryItem slot="0" type="diamond_pickaxe"/>
            </Inventory>
        </AgentStart>
        <AgentHandlers>
            <DiscreteMovementCommands/>
            <InventoryCommands/>
            <ChatCommands/>
            <ObservationFromFullStats/>
            <ObservationFromGrid>
                <!--<Grid name="supervision21x21">-->
                    <!--<min x="-10" y="-10" z="-10" />-->
                    <!--<max x="10" y="10" z="10" />-->
                <!--</Grid>-->
                <Grid name="supervision11x11">
                    <min x="-5" y="-5" z="-5" />
                    <max x="5" y="5" z="5" />
                </Grid>
                <Grid name="supervision5x5">
                    <min x="-2" y="-2" z="-2" />
                    <max x="2" y="2" z="2" />
                </Grid>
                <Grid name="supervision3x3">
                    <min x="-1" y="-1" z="-1" />
                    <max x="1" y="1" z="1" />
                </Grid>
            </ObservationFromGrid>
            <ObservationFromChat/>
            <ObservationFromRay/>
        </AgentHandlers>
    </AgentSection>

</Mission>
